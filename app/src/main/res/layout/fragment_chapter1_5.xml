<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.drake.cs188.finalproject.chapter1.Chapter1_2Fragment"
    android:background="@color/orange">

    <!--Jesse Jeun: Basic set up for action page with textview and buttons-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chapter1_5_Text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:padding="30dp"
        android:layout_below="@+id/narrationButton"
        android:textColor="@color/orange"
        android:background="@color/opaque2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action1_1"
        android:layout_gravity="center"
        android:layout_below="@+id/chapter1_5_Text"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:background="@color/black"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action1_2"
        android:layout_gravity="center"
        android:layout_below="@+id/action1_1"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:background="@color/black"
        android:textColor="@color/white"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/narrationButton"
        android:background="@drawable/easteregg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_margin="10dp" />

</RelativeLayout>