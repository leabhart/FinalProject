<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.drake.cs188.finalproject.chapter6.Chapter6_2Fragment"
    android:background="@color/pink">


    <!--Jesse Jeun: Basic set up for action page with textview and buttons-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chapter6_2_Text"
        android:text="@string/chapter6_2_text"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chapter6_action1"
        android:id="@+id/action6_1"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/chapter6_2_Text"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="0dp"
        android:layout_alignLeft="@+id/chapter6_2_Text" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chapter6_action2"
        android:id="@+id/action6_2"
        android:layout_gravity="center"
        android:layout_below="@+id/chapter6_2_Text"
        android:layout_toRightOf="@+id/action6_1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp" />

</RelativeLayout>
