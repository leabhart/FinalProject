<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.drake.cs188.finalproject.chapter4.Chapter4_2Fragment"
    android:background="@color/yellow">


    <!--Craig, Jesse Jeun: Basic set up for action page with textview and buttons-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chapter4_2_Text"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:padding="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action4_1"
        android:layout_gravity="center"
        android:layout_below="@+id/chapter4_2_Text"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action4_2"
        android:layout_gravity="center"
        android:layout_below="@+id/action4_1"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
